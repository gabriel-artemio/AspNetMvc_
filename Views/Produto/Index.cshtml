@{
    ViewData["Title"] = "Listagem de Produtos";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-success" role="button" asp-controller="Produto" asp-action="InserirProduto">Adicionar novo produto</a>
    </div>
    <br />
    <h3 class="display-4">Produtos cadastrados</h3>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">Cód.</th>
                <th scope="col">Nome do Produto</th>
                <th scope="col">Preço de venda</th>
                <th scope="col">Status</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Farinha de Trigo</td>
                <td>5,25</td>
                <td>Ativo</td>
                <td>
                    <div class="btn-group" role="group">
                        <a role="button" class="btn btn-warning" asp-controller="Produto" asp-action="EditarProduto">Editar</a>
                        <a role="button" class="btn btn-danger" asp-controller="Produto" asp-action="ApagarConfirmacao">Excluir</a>
                    </div>
                </td>
            </tr>
        </tbody>
    </table>
</div>